@model AgustinDonalisioProyectoPNT1.Models.Cellar

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style>
        .table th {
            text-align: center;
        }

        .table td {
            vertical-align: middle;
            text-align: center;
        }
    </style>

</head>
<body>

    <div class="container">
        <h4 class="mt-4">Cellar</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>

    @if (ViewBag.Wines != null && ((List<AgustinDonalisioProyectoPNT1.Models.ViewModel.CreateWineModel>)ViewBag.Wines).Count > 0)
    {
        <div class="container mt-4">
            <h3>Wines:</h3>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Type</th>
                        <th>Year</th>
                        <th>Quantity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var wine in ViewBag.Wines)
                    {
                        <tr>
                            <td>@wine.Name</td>
                            <td>@wine.Brand</td>
                            <td>@wine.Type</td>
                            <td>@wine.Year</td>
                            <td>@wine.WineQuantity</td>
                            <td>
                                <a class="btn btn-success" title="Add" asp-action="AddToWine" asp-route-IdCellar="@wine.IdCellar" asp-route-IdWine="@wine.IdWine">+</a>
                                <a class="btn btn-danger" title="Remove" asp-action="ResToWine" asp-route-IdCellar="@wine.IdCellar" asp-route-IdWine="@wine.IdWine">-</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="container mt-4">
            <h3>Wines:</h3>
            <p>
                No wines found
            </p>
        </div>
    }

    <div class="container mt-4">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit Cellar</a> |
        <a class="btn btn-info" asp-action="Index">Back to List</a> |
        <a class="btn btn-success" asp-action="AddWine" asp-route-cellarId="@Model.Id">Add Wine</a>
    </div>

</body>
</html>
