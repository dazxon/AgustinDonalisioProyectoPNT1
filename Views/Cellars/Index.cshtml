@model IEnumerable<AgustinDonalisioProyectoPNT1.Models.Cellar>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
<style>
        .custom-hover-row:hover {
            cursor: pointer;
        }
</style>
</head>

<body>
    <form method="get" action="@Url.Action("Index")">
        <input type="text" name="searchTerm" placeholder="Search by Cellar name" />
        <button type="submit">
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
            {
                <text>Clear Search or New Search</text>
            }
            else
            {
                <text>New Search</text>
            }
        </button>
    </form>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WineQuantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="location.href='@Url.Action("Details", new { id = item.Id })'" style="vertical-align: baseline" class="custom-hover-row">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WineQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No cellars found.</p>
    }
</body>
</html>

