@model AgustinDonalisioProyectoPNT1.Models.Cellar

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h4 class="text-center">Edit Cellar</h4>
                <hr />

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="display: none">
                        <label asp-for="IdUser" class="control-label"></label>
                        <input asp-for="IdUser" class="form-control" />
                        <span asp-validation-for="IdUser" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="padding: 20px 0px">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="display: none">
                        <label asp-for="WineQuantity" class="control-label"></label>
                        <input asp-for="WineQuantity" class="form-control" min="1" />
                        <span asp-validation-for="WineQuantity" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-danger"/>
                    </div>
                </form>

                <div class="text-center" style="padding-top: 10px">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Back to List</a>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
